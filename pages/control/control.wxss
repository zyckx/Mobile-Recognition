/* pages/app/app.wxss */
.control-wrap {
	width: 100%;
	height: 100%;
	padding: 2%;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	box-sizing: border-box;
}
.control{
	width: 90%;
	min-height: 500rpx;
	margin-top: 70rpx;
	display: flex;
	flex-direction: column;
}
.course-card{
	width: 100%;
	min-height: 400rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.course-card text{
	font-size: 55rpx;
	font-weight: 600;
	letter-spacing: 0.5em;
}
.panel-item {
	margin-bottom: 32rpx;
}

.panel-item::after {
	border: 0;
}

.buttonGroup {
	width: 100%;
	margin-top: 100rpx !important;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-wrap: nowrap;
}

.buttonGroup .btn {
	width: 300rpx;
}