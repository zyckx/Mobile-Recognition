/* pages/person/person.wxss */
.person {
	width: 100%;
	height: 100vh;
	background: #f4f5f9;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.avatar {
	width: 90%;
	height: 200rpx;
	display: flex;
	align-items: center;
}
.avatar-image{
	margin-right: 20rpx;
}
.user-info{
	display: flex;
	flex-direction: column;
	margin-right: 20rpx;
}
.user-name{
	font-weight: bold;
}
.user-id{
	font-size: 25rpx;
}
.info-card {
	width: 90%;
	padding: 2px;
	box-shadow: 0 0 10rpx 1rpx rgba(0, 0, 0, .3) ;
	border-radius: 10px;
	/* box-sizing: border-box; */
}
.others{
	margin-top: 50rpx;
	width: 100%;
	background: #f4f5f9;
}
.more{
	width: 100%;
	margin-top: 20rpx;
	background: #f4f5f9;
}